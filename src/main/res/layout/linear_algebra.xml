<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".LinearAlgebraActivity">

    <!-- 上部の戻るボタンとTextView -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="#B0C4DE">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:backgroundTint="#4169E1"
            android:text="戻る"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="線形代数"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- 検索用 Spinner (テキスト入力でなく、Spinnerで項目を選ぶ) -->
    <Spinner
        android:id="@+id/search_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:spinnerMode="dialog"
        />

    <!-- TableRow (ImageButton + Spinner + EditText) -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- FrameLayout内に ImageButton + "画像選択"Text -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/image_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#EEEEEE"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_image_button_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="画像選択"
                android:textColor="#000000"
                android:textStyle="bold"
                />
        </FrameLayout>

        <!-- Spinner and EditText -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:spinnerMode="dialog" />

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:gravity="top"
                android:hint="テキスト入力"
                android:lines="5" />
        </LinearLayout>

    </TableRow>

    <!-- ボタンのTableRow -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4169E1"
            android:text="追加"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </TableRow>

    <!-- スクロール可能なレイアウト -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/dynamic_table_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 動的にTableRowを追加するエリア -->
        </LinearLayout>

    </ScrollView>

</LinearLayout>
